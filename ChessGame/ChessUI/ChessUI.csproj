<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>disable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="ChessAssets\BishopB.png" />
    <None Remove="ChessAssets\BishopW.png" />
    <None Remove="ChessAssets\Board.png" />
    <None Remove="ChessAssets\CursorB.cur" />
    <None Remove="ChessAssets\CursorW.cur" />
    <None Remove="ChessAssets\icon.ico" />
    <None Remove="ChessAssets\KingB.png" />
    <None Remove="ChessAssets\KingW.png" />
    <None Remove="ChessAssets\KnightB.png" />
    <None Remove="ChessAssets\KnightW.png" />
    <None Remove="ChessAssets\PawnB.png" />
    <None Remove="ChessAssets\PawnW.png" />
    <None Remove="ChessAssets\QueenB.png" />
    <None Remove="ChessAssets\QueenW.png" />
    <None Remove="ChessAssets\RookB.png" />
    <None Remove="ChessAssets\RookW.png" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\ChessLogic\ChessLogic.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="ChessAssets\BishopB.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Resource>
    <Resource Include="ChessAssets\BishopW.png" />
    <Resource Include="ChessAssets\Board.png" />
    <Resource Include="ChessAssets\CursorB.cur" />
    <Resource Include="ChessAssets\CursorW.cur" />
    <Resource Include="ChessAssets\icon.ico" />
    <Resource Include="ChessAssets\KingB.png" />
    <Resource Include="ChessAssets\KingW.png" />
    <Resource Include="ChessAssets\KnightB.png" />
    <Resource Include="ChessAssets\KnightW.png" />
    <Resource Include="ChessAssets\PawnB.png" />
    <Resource Include="ChessAssets\PawnW.png" />
    <Resource Include="ChessAssets\QueenB.png" />
    <Resource Include="ChessAssets\QueenW.png" />
    <Resource Include="ChessAssets\RookB.png" />
    <Resource Include="ChessAssets\RookW.png" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Properties\Resources.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Resources.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Properties\Resources.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>Resources.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

</Project>
